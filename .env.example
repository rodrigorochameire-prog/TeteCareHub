# ==========================================
# DEFENSORHUB - VARIÁVEIS DE AMBIENTE
# ==========================================
# Copie este arquivo para .env.local e preencha com suas credenciais

# ==========================================
# BANCO DE DADOS (PostgreSQL / Supabase)
# ==========================================
# URL de conexão com o banco de dados PostgreSQL
# Formato: postgresql://usuario:senha@host:porta/banco
DATABASE_URL="postgresql://postgres:sua_senha@db.xxx.supabase.co:5432/postgres"

# ==========================================
# SUPABASE
# ==========================================
# URL do projeto Supabase
NEXT_PUBLIC_SUPABASE_URL="https://xxx.supabase.co"

# Chave anônima (pública) do Supabase
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJ..."

# Chave de serviço do Supabase (nunca exponha no frontend!)
SUPABASE_SERVICE_ROLE_KEY="eyJ..."

# ==========================================
# CLERK (AUTENTICAÇÃO)
# ==========================================
# Chave publicável do Clerk (pode ser exposta no frontend)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."

# Chave secreta do Clerk (nunca exponha no frontend!)
CLERK_SECRET_KEY="sk_test_..."

# URLs de redirecionamento do Clerk
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/admin"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/admin"

# ==========================================
# APLICAÇÃO
# ==========================================
# URL base da aplicação
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Segredo para JWT (gere uma string aleatória segura)
JWT_SECRET="sua_chave_secreta_muito_longa_e_aleatoria"

# ==========================================
# WHATSAPP BUSINESS API (OPCIONAL)
# ==========================================
# Token de acesso permanente da Meta/WhatsApp
WHATSAPP_ACCESS_TOKEN=""

# ID do número de telefone no WhatsApp Business
WHATSAPP_PHONE_NUMBER_ID=""

# ID da conta do WhatsApp Business (para templates)
WHATSAPP_BUSINESS_ACCOUNT_ID=""

# Token de verificação do webhook (você define)
WHATSAPP_WEBHOOK_VERIFY_TOKEN=""

# ==========================================
# OPENAI (OPCIONAL - PARA IA)
# ==========================================
OPENAI_API_KEY=""

# ==========================================
# INNGEST (OPCIONAL - PARA JOBS AGENDADOS)
# ==========================================
INNGEST_EVENT_KEY=""
INNGEST_SIGNING_KEY=""

# ==========================================
# AXIOM (OPCIONAL - PARA LOGS)
# ==========================================
AXIOM_TOKEN=""
AXIOM_DATASET=""

# ==========================================
# AMBIENTE
# ==========================================
NODE_ENV="development"
