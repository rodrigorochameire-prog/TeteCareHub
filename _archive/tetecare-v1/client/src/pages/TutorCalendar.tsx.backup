import { useState } from "react";
import { trpc } from "@/lib/trpc";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { Dialog, DialogContent, DialogHeader, DialogTitle } from "@/components/ui/dialog";
import { 
  Calendar as CalendarIcon, 
  ChevronLeft, 
  ChevronRight,
  Pill,
  Heart,
  Plus
} from "lucide-react";
import TutorLayout from "@/components/TutorLayout";
import { format, startOfMonth, endOfMonth, eachDayOfInterval, isSameMonth, isSameDay, addMonths, subMonths, isToday } from "date-fns";
import { ptBR } from "date-fns/locale";
import { cn } from "@/lib/utils";
import { toast } from "sonner";

export default function TutorCalendar() {
  const [currentDate, setCurrentDate] = useState(new Date());
  const [selectedDate, setSelectedDate] = useState<Date | null>(null);
  
  const { data: pets } = trpc.pets.listMine.useQuery();
  
  // Get calendar events for current month
  const monthStart = startOfMonth(currentDate);
  const monthEnd = endOfMonth(currentDate);
  
  const { data: calendarEvents } = trpc.calendar.getEvents.useQuery({
    startDate: monthStart,
    endDate: monthEnd,
  });

  // Get all data for the month  
  const { data: logs } = trpc.logs.listMine.useQuery();

  const days = eachDayOfInterval({ start: monthStart, end: monthEnd });
  const weekDays = ["Dom", "Seg", "Ter", "Qua", "Qui", "Sex", "Sáb"];

  const getEventsForDate = (date: Date) => {
    const events: any[] = [];
    
    // Calendar events
    if (calendarEvents) {
      const dayEvents = calendarEvents.filter(event => 
        isSameDay(new Date(event.eventDate), date)
      );
      events.push(...dayEvents.map(e => ({ ...e, type: "event" })));
    }

    // Daily logs
    if (logs) {
      const dayLogs = logs.filter(log => 
        isSameDay(new Date(log.logDate), date)
      );
      events.push(...dayLogs.map(l => ({ ...l, type: "log" })));
    }

    return events;
  };

  const hasEvents = (date: Date) => {
    return getEventsForDate(date).length > 0;
  };

  const getEventIndicators = (date: Date) => {
    const events = getEventsForDate(date);
    const types = new Set(events.map(e => e.type));
    return Array.from(types);
  };

  return (
    <TutorLayout>
      <div className="container max-w-7xl py-8 space-y-8 animate-fade-in">
        {/* Header */}
        <div className="flex items-center justify-between">
          <div>
            <h1 className="text-3xl font-bold tracking-tight flex items-center gap-2">
              <div className="p-2 bg-gradient-to-br from-purple-500 to-pink-500 rounded-lg">
                <CalendarIcon className="h-7 w-7 text-white" />
              </div>
              Calendário
            </h1>
            <p className="text-muted-foreground mt-2">
              Acompanhe todos os eventos, medicamentos e atividades dos seus pets
            </p>
          </div>
        </div>

        {/* Legend */}
        <Card>
          <CardHeader>
            <CardTitle className="text-sm">Legenda</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="flex flex-wrap gap-4">
              <div className="flex items-center gap-2">
                <div className="h-3 w-3 rounded-full bg-blue-500"></div>
                <span className="text-sm">Eventos</span>
              </div>

              <div className="flex items-center gap-2">
                <div className="h-3 w-3 rounded-full bg-purple-500"></div>
                <span className="text-sm">Logs Diários</span>
              </div>
            </div>
          </CardContent>
        </Card>

        {/* Calendar */}
        <Card className="shadow-card">
          <CardHeader>
            <div className="flex items-center justify-between">
              <h2 className="text-2xl font-bold">
                {format(currentDate, "MMMM yyyy", { locale: ptBR })}
              </h2>
              <div className="flex gap-2">
                <Button
                  variant="outline"
                  size="sm"
                  onClick={() => setCurrentDate(subMonths(currentDate, 1))}
                >
                  <ChevronLeft className="h-4 w-4" />
                </Button>
                <Button
                  variant="outline"
                  size="sm"
                  onClick={() => setCurrentDate(new Date())}
                >
                  Hoje
                </Button>
                <Button
                  variant="outline"
                  size="sm"
                  onClick={() => setCurrentDate(addMonths(currentDate, 1))}
                >
                  <ChevronRight className="h-4 w-4" />
                </Button>
              </div>
            </div>
          </CardHeader>
          <CardContent>
            {/* Week days header */}
            <div className="grid grid-cols-7 gap-2 mb-2">
              {weekDays.map(day => (
                <div key={day} className="text-center text-sm font-medium text-muted-foreground py-2">
                  {day}
                </div>
              ))}
            </div>

            {/* Calendar grid */}
            <div className="grid grid-cols-7 gap-2">
              {/* Empty cells for days before month start */}
              {Array.from({ length: monthStart.getDay() }).map((_, i) => (
                <div key={`empty-${i}`} className="aspect-square"></div>
              ))}

              {/* Calendar days */}
              {days.map(day => {
                const indicators = getEventIndicators(day);
                const today = isToday(day);

                return (
                  <button
                    key={day.toISOString()}
                    onClick={() => setSelectedDate(day)}
                    className={cn(
                      "aspect-square p-2 rounded-lg border transition-all hover:border-primary hover:bg-accent",
                      today && "border-primary bg-primary/10",
                      !isSameMonth(day, currentDate) && "opacity-50",
                      hasEvents(day) && "font-semibold"
                    )}
                  >
                    <div className="flex flex-col h-full">
                      <span className={cn(
                        "text-sm",
                        today && "text-primary font-bold"
                      )}>
                        {format(day, "d")}
                      </span>
                      
                      {/* Event indicators */}
                      {indicators.length > 0 && (
                        <div className="flex flex-wrap gap-1 mt-auto">
                          {indicators.includes("event") && (
                            <div className="h-1.5 w-1.5 rounded-full bg-blue-500"></div>
                          )}
                          {indicators.includes("log") && (
                            <div className="h-1.5 w-1.5 rounded-full bg-purple-500"></div>
                          )}
                        </div>
                      )}
                    </div>
                  </button>
                );
              })}
            </div>
          </CardContent>
        </Card>

        {/* Day Events Modal */}
        {selectedDate && (
          <DayEventsModal
            date={selectedDate}
            events={getEventsForDate(selectedDate)}
            pets={pets || []}
            onClose={() => setSelectedDate(null)}
          />
        )}
      </div>
    </TutorLayout>
  );
}

function DayEventsModal({ date, events, pets, onClose }: {
  date: Date;
  events: any[];
  pets: any[];
  onClose: () => void;
}) {
  const [showEventForm, setShowEventForm] = useState(false);
  const [showMedicationForm, setShowMedicationForm] = useState(false);
  const [selectedPetId, setSelectedPetId] = useState<number | null>(null);
  const [eventTitle, setEventTitle] = useState("");
  const [eventType, setEventType] = useState("general");
  const [medicationName, setMedicationName] = useState("");
  const [dosage, setDosage] = useState("");

  const utils = trpc.useUtils();

  const createEvent = trpc.calendar.add.useMutation({
    onSuccess: () => {
      toast.success("Evento adicionado!");
      utils.calendar.getEvents.invalidate();
      setShowEventForm(false);
      setEventTitle("");
      setSelectedPetId(null);
    },
  });

  const createMedication = trpc.medications.add.useMutation({
    onSuccess: () => {
      toast.success("Medicamento registrado!");
      setShowMedicationForm(false);
      setMedicationName("");
      setDosage("");
      setSelectedPetId(null);
    },
  });
  const eventsByType = {
    events: events.filter(e => e.type === "event"),
    logs: events.filter(e => e.type === "log"),
  };

  const getPetName = (petId: number) => {
    return pets.find(p => p.id === petId)?.name || "Pet desconhecido";
  };

  return (
    <Dialog open={true} onOpenChange={onClose}>
      <DialogContent className="max-w-2xl max-h-[80vh] overflow-y-auto">
        <DialogHeader>
          <DialogTitle className="flex items-center gap-2">
            <CalendarIcon className="h-5 w-5" />
            {format(date, "dd 'de' MMMM 'de' yyyy", { locale: ptBR })}
          </DialogTitle>
        </DialogHeader>

        <div className="space-y-6">
          {/* Summary */}
          <div className="grid grid-cols-2 gap-4">
            <Card>
              <CardContent className="pt-6">
                <div className="text-center">
                  <p className="text-2xl font-bold">{eventsByType.events.length}</p>
                  <p className="text-sm text-muted-foreground">Eventos</p>
                </div>
              </CardContent>
            </Card>

            <Card>
              <CardContent className="pt-6">
                <div className="text-center">
                  <p className="text-2xl font-bold">{eventsByType.logs.length}</p>
                  <p className="text-sm text-muted-foreground">Logs</p>
                </div>
              </CardContent>
            </Card>
          </div>

          {events.length === 0 && (
            <div className="p-8 text-center">
              <CalendarIcon className="h-12 w-12 mx-auto mb-3 text-muted-foreground" />
              <p className="font-medium mb-1">Nenhum evento neste dia</p>
              <p className="text-sm text-muted-foreground">
                Adicione eventos, medicamentos ou registre atividades
              </p>
            </div>
          )}

          {/* Calendar Events */}
          {eventsByType.events.length > 0 && (
            <div>
              <h3 className="font-semibold mb-3 flex items-center gap-2">
                <CalendarIcon className="h-4 w-4" />
                Eventos Agendados
              </h3>
              <div className="space-y-2">
                {eventsByType.events.map((event: any) => (
                  <Card key={event.id} className="border-blue-200 bg-blue-50 dark:bg-blue-950/20">
                    <CardContent className="p-4">
                      <div className="flex items-start justify-between">
                        <div>
                          <p className="font-medium">{event.title}</p>
                          <p className="text-sm text-muted-foreground">{getPetName(event.petId)}</p>
                          {event.description && (
                            <p className="text-sm mt-1">{event.description}</p>
                          )}
                        </div>
                        <Badge variant="secondary">{event.eventType}</Badge>
                      </div>
                    </CardContent>
                  </Card>
                ))}
              </div>
            </div>
          )}



          {/* Daily Logs */}
          {eventsByType.logs.length > 0 && (
            <div>
              <h3 className="font-semibold mb-3 flex items-center gap-2">
                <Heart className="h-4 w-4" />
                Logs Diários
              </h3>
              <div className="space-y-2">
                {eventsByType.logs.map((log: any) => (
                  <Card key={log.id} className="border-purple-200 bg-purple-50 dark:bg-purple-950/20">
                    <CardContent className="p-4">
                      <div>
                        <p className="font-medium">{getPetName(log.petId)}</p>
                        <div className="text-sm text-muted-foreground mt-1 space-y-1">
                          {log.humor && <p>Humor: {log.humor}</p>}
                          {log.apetite && <p>Apetite: {log.apetite}</p>}
                          {log.comportamento && <p>Comportamento: {log.comportamento}</p>}
                          {log.notas && <p className="italic">"{log.notas}"</p>}
                        </div>
                      </div>
                    </CardContent>
                  </Card>
                ))}
              </div>
            </div>
          )}

          {/* Quick Actions */}
          <div className="border-t pt-4">
            <p className="text-sm font-medium mb-3">Ações Rápidas</p>
            <div className="grid grid-cols-2 gap-2">
              <Button 
                variant="outline" 
                size="sm" 
                onClick={() => setShowEventForm(!showEventForm)}
              >
                <Plus className="h-4 w-4 mr-2" />
                Adicionar Evento
              </Button>
              <Button 
                variant="outline" 
                size="sm" 
                onClick={() => setShowMedicationForm(!showMedicationForm)}
              >
                <Pill className="h-4 w-4 mr-2" />
                Registrar Medicamento
              </Button>
            </div>

            {/* Event Form */}
            {showEventForm && (
              <Card className="mt-4 p-4 bg-blue-50 dark:bg-blue-950/20">
                <div className="space-y-3">
                  <div>
                    <label className="text-sm font-medium">Pet</label>
                    <select
                      className="w-full mt-1 p-2 border rounded-md"
                      value={selectedPetId || ""}
                      onChange={(e) => setSelectedPetId(Number(e.target.value))}
                    >
                      <option value="">Selecione um pet</option>
                      {pets.map((pet: any) => (
                        <option key={pet.id} value={pet.id}>{pet.name}</option>
                      ))}
                    </select>
                  </div>
                  <div>
                    <label className="text-sm font-medium">Título</label>
                    <input
                      type="text"
                      className="w-full mt-1 p-2 border rounded-md"
                      value={eventTitle}
                      onChange={(e) => setEventTitle(e.target.value)}
                      placeholder="Ex: Consulta veterinária"
                    />
                  </div>
                  <div>
                    <label className="text-sm font-medium">Tipo</label>
                    <select
                      className="w-full mt-1 p-2 border rounded-md"
                      value={eventType}
                      onChange={(e) => setEventType(e.target.value)}
                    >
                      <option value="general">Geral</option>
                      <option value="medical">Consulta</option>
                      <option value="vaccination">Vacinação</option>
                      <option value="medication">Medicamento</option>
                      <option value="holiday">Feriado</option>
                    </select>
                  </div>
                  <div className="flex gap-2">
                    <Button
                      size="sm"
                      onClick={() => {
                        if (!selectedPetId || !eventTitle) {
                          toast.error("Preencha todos os campos");
                          return;
                        }
                        createEvent.mutate({
                          petId: selectedPetId,
                          title: eventTitle,
                          eventDate: date,
                          eventType: eventType as "vaccination" | "medication" | "holiday" | "medical" | "general",
                        });
                      }}
                      disabled={createEvent.isPending}
                    >
                      Salvar
                    </Button>
                    <Button
                      size="sm"
                      variant="outline"
                      onClick={() => setShowEventForm(false)}
                    >
                      Cancelar
                    </Button>
                  </div>
                </div>
              </Card>
            )}

            {/* Medication Form */}
            {showMedicationForm && (
              <Card className="mt-4 p-4 bg-purple-50 dark:bg-purple-950/20">
                <div className="space-y-3">
                  <div>
                    <label className="text-sm font-medium">Pet</label>
                    <select
                      className="w-full mt-1 p-2 border rounded-md"
                      value={selectedPetId || ""}
                      onChange={(e) => setSelectedPetId(Number(e.target.value))}
                    >
                      <option value="">Selecione um pet</option>
                      {pets.map((pet: any) => (
                        <option key={pet.id} value={pet.id}>{pet.name}</option>
                      ))}
                    </select>
                  </div>
                  <div>
                    <label className="text-sm font-medium">Medicamento</label>
                    <input
                      type="text"
                      className="w-full mt-1 p-2 border rounded-md"
                      value={medicationName}
                      onChange={(e) => setMedicationName(e.target.value)}
                      placeholder="Nome do medicamento"
                    />
                  </div>
                  <div>
                    <label className="text-sm font-medium">Dosagem</label>
                    <input
                      type="text"
                      className="w-full mt-1 p-2 border rounded-md"
                      value={dosage}
                      onChange={(e) => setDosage(e.target.value)}
                      placeholder="Ex: 1 comprimido"
                    />
                  </div>
                  <div className="flex gap-2">
                    <Button
                      size="sm"
                      onClick={() => {
                        if (!selectedPetId || !medicationName || !dosage) {
                          toast.error("Preencha todos os campos");
                          return;
                        }
                        // For now, just show success message
                        // In a real implementation, you'd need to select from medication library
                        toast.success("Funcionalidade em desenvolvimento. Use a aba de Medicamentos para adicionar.");
                        setShowMedicationForm(false);
                      }}
                      disabled={createMedication.isPending}
                    >
                      Salvar
                    </Button>
                    <Button
                      size="sm"
                      variant="outline"
                      onClick={() => setShowMedicationForm(false)}
                    >
                      Cancelar
                    </Button>
                  </div>
                </div>
              </Card>
            )}
          </div>
        </div>
      </DialogContent>
    </Dialog>
  );
}
